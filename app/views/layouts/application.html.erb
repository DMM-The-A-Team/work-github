  </head>

  <body>
    <header>

</head>
<body>
<header class="navbar navbar-expand-lg navbar-dark bg-dark">
 <div class="container">
  <nav class='nav navbar-nav navbar-left' >
   <h2><a class="navbar-brand"href = "/" >ながのCake</a></h2>
  </nav>
  <ul class="d-flex flex-row navbar-nav ml-auto">

    <% if customer_signed_in? %>

    <li class="nav-item m-3">
      <%= link_to "マイページ", customers_my_page_path, class: 'btn btn-outline-secondary' %>
    </li>
    <li class="nav-item m-3">
      <%= link_to "商品一覧", public_items_path, class: 'btn btn-outline-secondary' %>
    </li>
    <li class="nav-item m-3">
      <%= link_to "カート", cart_items_path, class: 'btn btn-outline-secondary' %>
    </li>
    <li class="nav-item m-3">
      <%= button_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
    </li>
    <% elsif admin_signed_in? %>
    <li class="nav-item m-3">
      <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-secondary' %>
    </li>
    <li class="nav-item m-3">
      <%= link_to "会員一覧", admin_customers_index_path, class: 'btn btn-outline-secondary' %>
    </li>
    <li class="nav-item m-3">
      <%= link_to "注文履歴一覧", admin_orders_index_path, class: 'btn btn-outline-secondary' %>
