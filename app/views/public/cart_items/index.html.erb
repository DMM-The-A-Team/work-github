<main>
  <div class="mx-auto" style="width: 200px;">
    <h2>ショッピングカート</h2>

    <% @cart_items.each do |cart_item| %>
    <% end %>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>

          <th colspan="1"></th>

          <th>小計</th>
          <th></th>
        </tr>
      </thead>

      <% total_price = 0 %>

      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= (cart_item.item.price * 1.1).floor %></td>

        <%= form_with model: cart_item, url: cart_item_update_path(cart_item), method: :patch do |f| %>
          <td><%= f.select :amount, *[1..10] %></td>
          <td><%= f.submit "変更", class:"btn btn-success" %></td>
        <% end %>
          <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
          <td><%= button_to "削除", cart_item_delete_path(cart_item), method: :delete %></td>
        </tr>
        <%= link_to "買い物を続ける", "/items" %>

        合計金額<%= total_price += (cart_item.item.price * 1.1).floor * cart_item.amount %>

        <%= form_with model:cart_item, url:cart_items_path(cart_item), method: :PUT do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更", class:"btn btn-success" %>
        <% end %>
          <td></td>
          <td></td>
        </tr>

        <% end %>
      </tbody>
  </div>
</main>