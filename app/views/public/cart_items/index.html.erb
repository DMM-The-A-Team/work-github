<main>
  <h2>ショッピングカート</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><% item.price %></td>
      <%= form_with model: @cart_items,url: '/items_path' do |f| %>
        <td><%= f.select :amount, *[1..10] %></td>
      <% end %>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
</main>