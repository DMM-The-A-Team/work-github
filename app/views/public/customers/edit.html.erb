<div class="container">
   <div class="col-lg-10">
<h2>会員情報編集</h2>


<%= form_with model: @customer,url: customers_update_path do |f| %>

<div class="col-md-10">
  <div class="form-group col-md-12">
   <label>氏名</label><br>
   <%= f.text_field :sunname %>
   <%= f.text_field :name %>
  </div>

  <div class= "fotm-group col-md-12">
   <label>カナ</label><br>
   <%= f.text_field :sunname_kana %>
   <%= f.text_field :name_kana %>
  </div>

  <div class= "form-group col-md-12">
   <label>郵便番号</label><br>
   <%= f.text_field :postal_code %>
  </div>

  <div class= "form-group col-md-12">
   <label>住所</label><br>
   <%= f.text_field :address %>
  </div>

  <div class= "form-group col-md-12">
   <label>電話番号</label><br>
   <%= f.text_field :telephone_number %>
  </div>

  <div class= "form-group col-md-12">
   <label>メールアドレス</label><br>
   <%= f.text_field :email %>
  </div>
  <div class= "form-group col-md-12">
   <%= f.submit "変更を保存",class: "btn btn-success" %>　　　　<span> <%= link_to "退会する", customers_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-danger" %></span>
  </div>
  <br><br>
  <% end %>

</div>
  </div>
    </div>


