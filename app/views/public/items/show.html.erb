<main>
  <% if @item.image.attached? %>
    <%= image_tag @item.image, size: "200x100" %><br>
  <% else %>
    <%= image_tag 'no_image', size: "200x100" %><br>
  <% end %>
  商品名<%= @item.name %>
  商品説明<%= @item.introduction %>
  ￥<%= @item.price %>(税込)
  <%= form_with model: @cart_item,url: '/cart_items'  do |f| %>
    <%= f.hidden_field :title, :value => :item_id %>
    <%= f.select :amount, *[1..10] %>
    <%= f.submit "カートに入れる" %>
  <% end %>
</main>