<div class="container px-5 px-sm-0">
  <div class="row">
    <div class= "col-md-8 offset-md-1">
        <p><h2>商品一覧</h2>(全件)</p>
        <% @items.each do |item| %>
          <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x100" %><br>
          <% else %>
            <%= image_tag 'no_image', size: "200x100" %><br>
          <% end %>
            <%= item.name %><br>
            ￥<%= item.price %><br>
        <% end %>
    </div>
  </div>
</div>