<main>
  <div class="d-flex justify-content-center">
  <div class="align-self-center">
    <div class="row">
       <div class="col-xs-4">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "200x100" %><br>
        <% else %>
          <%= image_tag 'no_image', size: "200x100" %><br>
        <% end %>
        </div>
        <div class="col-xs-8">
          商品名<%= @item.name %><br>
          商品説明<%= @item.introduction %><br>
          税込価格<%= @item.price %><br>
          <%= link_to "編集する", edit_admins_items_path(@item.id), class:"btn btn-success" %>
        </div>
    </div>
  </div>
  </div>
</main>