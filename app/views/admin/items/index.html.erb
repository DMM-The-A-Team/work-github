<main>
<div class="container">
  <h2>商品一覧</h2>
    <%= link_to "商品新規登録", 'items/new' %>
  <table class = "table table-hover">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜き価格</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</main>