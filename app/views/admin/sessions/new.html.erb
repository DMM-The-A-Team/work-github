<div class="container">

<br><br>
<h2 style="width: 300px;background-color: #a6d3c8; text-align: center; color: white">管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="container3">

<br><br>
  <div class="field">

<strong><%= f.label :メールアドレス %></strong>　　 　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
<br>
  <div class="field">

<strong><%= f.label :パスワード %></strong>　　 　　　　　　<%= f.password_field :password, autocomplete: "current-password" %>
  </div>



  <div class="actions">
    <br>
     <%= f.submit "ログイン", class: "btn btn-primary btn-lg center-block" %>
<% end %>

<%= render "admin/shared/links" %>

</div>
  </div>


